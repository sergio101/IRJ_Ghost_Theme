{{!< default}}
{{#post}}

    <div class="row" >
	<div class="col-md-8" >
	    <main role="main" >
		<article>
		    <header class="post-header">
			<h1 class="post-title">{{title}}</h1>
			<section class="post-meta">
			    <em><time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time></em> {{tags prefix=" on "}}
			</section>
		    </header>
		    <section class="post-content">
			{{content}}
		    </section>
		</article>
	    </main>
	</div>
	<div class="col-md-4">
	    {{> main_sidebar }}
	</div>
    </div>
    

{{/post}}
